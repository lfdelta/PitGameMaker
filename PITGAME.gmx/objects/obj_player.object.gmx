            <string>/// Draw player and hookshot guide

grappleReach = obj_player.grappleReach;
grappleTo = obj_player.grappleTo;
playerState = obj_player.playerState;

// Draw the player
draw_self();

if (grappleKey &amp;&amp; playerState == playerFSM.NORMAL) {
    if (grappleKey_P &amp;&amp; didHit) {
        // draw a line to enemy if attacked
        draw_set_colour(c_aqua);
        draw_line(x, y+ySprOffset, grappleAtkX, grappleAtkY);
    } else {
        // Draw a circle to indicate grapple range
        draw_set_colour(c_red);
        draw_set_circle_precision(48);
        draw_circle(x, y+ySprOffset, grappleReach, true);
    }
}

// If grapple was successful, draw the grapple line
if (playerState == playerFSM.PULL) {
    draw_set_color(c_lime);
    // y-20 to approximate player sprite center (origin is at bottom)
    draw_line(x, y+ySprOffset, grappleTo[0], grappleTo[1]);
}
